---
interface Props {
  title?: string;
}
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/kevin_single_logo_favicon.svg"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title !== undefined ? title : "Spell Overview"}</title>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>

