  html {
    color-scheme: light dark;
    text-wrap: balance;
  }

  html,
  body {
    font-family: "Inclusive Sans", sans-serif;
    margin: 0;
    width: 100%;
    height: 100%;
  }

  body {
    background-color: var(--background-color);
    color: var(--text-color);
    font-size: var(--font-size-20);

    main {
      margin: 0 var(--size-16);
      padding-bottom: var(--size-32);
    }
  }

  a {
    color: var(--teal);
    text-decoration: none;
  }

  p {
    a {
      font-weight: bold;
    }
  }

  iframe {
    max-width: 100%;
  }

  img {
    max-width: 100%;
    height: auto;
    object-fit: contain;
  }

  pre,
  img,
  iframe {
    border-radius: var(--size-8);
  }

  pre {
    padding: var(--size-16);
  }

  blockquote {
    background-color: light-dark(var(--crust), var(--surface0));
    margin: 0;
    padding: var(--size-8);
    padding-inline-start: var(--size-32);
    border-radius: 0 var(--size-4) var(--size-4) 0;
