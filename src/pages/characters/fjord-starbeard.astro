    "Elementalism",
    "Message",
    "Shillelagh",
    "Starry Wisp",
    "Thorn Whip",
    "Druidcraft",
    "Guidance", // circle of stars
    "Mage Hand", // telekinetic
    // prepared spells: 9
    "Healing Word",
    "Aid",
    "Barkskin",
    "Wither and Bloom",
    "Enlarge/Reduce",
    "Elemental Weapon",
    "Call Lightning",
    "Summon Fey",
    "Speak with Plants",
    "Thunderwave", // magic initiate
    "Find Familiar", // wild companion
    "Guiding Bolt", // circle of stars
    "Speak with Animals", // druidic
